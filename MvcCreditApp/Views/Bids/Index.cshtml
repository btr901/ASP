@model IEnumerable<MvcCreditApp.Models.Bid>

@{
    ViewData["Title"] = "Заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Заявки</h1>

<p>
    <a asp-action="Create">Создать заявку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th bgcolor="c3c3c3">
                @Html.DisplayNameFor(model => model.Name)
            </th bgcolor="c3c3c3">
            <th bgcolor="c3c3c3">
                @Html.DisplayNameFor(model => model.CreditHead)
            </th bgcolor="c3c3c3">
            <th>
                @Html.DisplayNameFor(model => model.bidDate)
            </th bgcolor="c3c3c3">
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bidDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BidId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.BidId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.BidId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
